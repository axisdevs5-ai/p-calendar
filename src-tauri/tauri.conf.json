{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "p-calendar",
  "version": "0.8.3",
  "identifier": "com.axisdevs.com",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "pcalendar",
        "title": "تقویم شمسی",
        "width": 800,
        "height": 820,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
